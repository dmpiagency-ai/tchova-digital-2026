# ============================================
# TCHOVA DIGITAL - ENVIRONMENT CONFIGURATION
# ============================================
# Architecture: Vercel (Hosting) + Firebase (Backend)
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ============================================
# APP CONFIGURATION
# ============================================
VITE_APP_NAME=TchovaDigital
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://tchovadigital.com

# ============================================
# FIREBASE CONFIGURATION (REQUIRED)
# ============================================
# Get these from Firebase Console > Project Settings > General > Your Apps
# 
# 1. Go to https://console.firebase.google.com
# 2. Select your project (or create a new one)
# 3. Go to Project Settings > General
# 4. Scroll to "Your apps" and select the web app (or create one)
# 5. Copy the configuration values
#
# IMPORTANT: For Vercel deployment, add these as Environment Variables
# in Vercel Dashboard > Project > Settings > Environment Variables

VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-ABCDEFGHIJ

# Use Firebase emulators in development (optional)
# Set to 'true' to connect to local Firebase emulators
VITE_USE_FIREBASE_EMULATOR=false

# ============================================
# WHATSAPP CONFIGURATION
# ============================================
VITE_WHATSAPP_NUMBER=258879097249

# ============================================
# PAYMENT PROVIDERS
# ============================================

# M-Pesa (Vodacom Mo√ßambique)
# Get credentials from Vodacom M-Pesa Business Portal
VITE_MPESA_SHORTCODE=
VITE_MPESA_PASSKEY=
VITE_MPESA_CONSUMER_KEY=
VITE_MPESA_CONSUMER_SECRET=
VITE_MPESA_API_KEY=

# E-mola (Movitel)
# Get credentials from Movitel E-mola Business Portal
VITE_EMOLA_MERCHANT_ID=
VITE_EMOLA_API_KEY=

# PayPal
# Get credentials from developer.paypal.com
VITE_PAYPAL_CLIENT_ID=
VITE_PAYPAL_CLIENT_SECRET=
VITE_PAYPAL_SANDBOX=true

# Stripe (Card Payments)
# Get credentials from dashboard.stripe.com
VITE_STRIPE_PUBLIC_KEY=
VITE_STRIPE_SECRET_KEY=

# Crypto Payments (NowPayments)
# Get API key from nowpayments.io
VITE_NOWPAYMENTS_API_KEY=

# ============================================
# AI PROVIDERS
# ============================================

# OpenAI (ChatGPT)
# Get API key from platform.openai.com
VITE_OPENAI_API_KEY=
VITE_OPENAI_ORG_ID=
VITE_OPENAI_MODEL=gpt-3.5-turbo

# Anthropic (Claude)
# Get API key from console.anthropic.com
VITE_ANTHROPIC_API_KEY=
VITE_ANTHROPIC_MODEL=claude-3-haiku

# Google AI (Gemini)
# Get API key from makersuite.google.com
VITE_GOOGLE_AI_KEY=
VITE_GOOGLE_AI_MODEL=gemini-pro

# Local AI (Ollama)
# For local development with Ollama
VITE_OLLAMA_URL=http://localhost:11434
VITE_OLLAMA_MODEL=llama2

# ============================================
# ANALYTICS
# ============================================

# Google Analytics 4
VITE_GA_MEASUREMENT_ID=

# Facebook Pixel
VITE_FB_PIXEL_ID=

# Debug mode for analytics
VITE_ANALYTICS_DEBUG=false
VITE_DISABLE_ANALYTICS=false

# ============================================
# API ENDPOINTS
# ============================================
VITE_API_BASE_URL=https://api.tchovadigital.com
VITE_PAYMENT_API_URL=https://payment.tchovadigital.com

# ============================================
# GSM SERVICES
# ============================================
VITE_GSM_SITE_URL=https://gsm.tchova.digital
VITE_GSM_TOOLS_REFERRAL_URL=https://4youtechservice.com/

# ============================================
# FEATURE FLAGS
# ============================================
# Set to 'false' to disable features
VITE_ENABLE_LOGIN=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_ADMIN=false
VITE_ENABLE_GSM_FEATURES=true
VITE_ENABLE_AI=true

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# These are automatically set by Vite
# NODE_ENV=development (or production)
# MODE=development